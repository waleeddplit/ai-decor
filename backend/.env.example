# Art.Decor.AI Backend Environment Variables
# Copy this file to .env and fill in your values

# Database - Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# LLM APIs (Choose one)
# Option 1: OpenAI (GPT-3.5/GPT-4)
OPENAI_API_KEY=sk-your-openai-api-key
CHAT_MODEL=gpt-3.5-turbo  # or gpt-4

# Option 2: Groq (Llama 3, faster & cheaper)
# GROQ_API_KEY=your-groq-api-key
# CHAT_MODEL=llama3-8b-8192

# External APIs (Optional)
TAVILY_API_KEY=your-tavily-api-key  # For trend intelligence
GOOGLE_MAPS_API_KEY=your-google-maps-api-key  # For store locator

# Application Settings
ENVIRONMENT=development
DEBUG=True
PORT=8000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:3000

# FAISS Settings
FAISS_INDEX_PATH=./data/artwork_vectors.index
FAISS_METADATA_PATH=./data/artwork_metadata.json

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
